@using todolistapp.Models
@model task
@{
    ViewBag.Title = "Create";
}


<div class="row">
    @using (Html.BeginForm())
    {
        <hr />

        <div class="form-group">
            @Html.TextBoxFor(a => a.todotext, new { @class = "form-control", placeholder = "To do" })
        </div>
        <div>
            @Html.TextBoxFor(a => a.tododate, new { @class = "form-control", @type = "datetime-local" })
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Submit</button>
        </div>
    }
</div>


