@using todolistapp.Models
@model task
@{
    ViewBag.Title = "Delete";
}

<hr />

<p>Do you want to delete this item?</p>

@using (Html.BeginForm())
{
    <div>
        <table>
            <tr>
                <td>Todo  : </td>
                <td>@Model.todotext</td>
            </tr>
            <tr>
                <td>Date : </td>
                <td>@Model.tododate</td>
            </tr>
            <tr>
                <td><button type="submit" class="btn btn-primary">Yes</button></td>
                <td><a href="@Url.Action("List")" class="btn btn-danger">No</a></td>
            </tr>
        </table>

    </div>
}

